/*
  React Application Deployment Pipeline
  Maintained by: DevOps Engineer @sak_shetty
  Purpose: Build & Deploy React app, replacing existing instance if running.
*/

pipeline {
    agent any

    stages {

        stage('Pipeline Info') {
            steps {
                echo "============================================================================="
                echo "âš›ï¸  React Application Deployment Pipeline"
                echo "ğŸ‘¨â€ğŸ’» Maintained by: DevOps Engineer @sak_shetty"
                echo "ğŸ¯ Purpose: Build & Deploy React app, replacing existing instance if running"
                echo "============================================================================="
            }
        }

        stage('Install Node.js if not present') {
            steps { 
                sh '''
                    if command -v node >/dev/null 2>&1; then
                        echo "âœ… Node.js already installed. Skipping installation."
                        node -v
                        npm -v
                    else
                        echo "ğŸ”¹ Installing Node.js LTS (20.x)..."
                        sudo apt update && sudo apt upgrade -y
                        sudo apt install -y curl
                        curl -fsSL https://deb.nodesource.com/setup_20.x | sudo -E bash -
                        sudo apt install -y nodejs
                        echo "âœ… Node.js installation complete."
                        node -v
                        npm -v
                    fi
                '''
            }
            post {
                success {
                    echo 'âœ… Node.js check/install completed successfully.'
                }
                failure {
                    echo 'âŒ Failed to install Node.js.'
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                    echo "ğŸ“¦ Installing React dependencies..."
                    npm install
                '''
            }
            post {
                success {
                    echo 'âœ… Dependencies installed successfully.'
                }
                failure {
                    echo 'âŒ Failed to install dependencies.'
                }
            }
        }

        stage('Build React App') {
            steps {
                sh '''
                    echo "ğŸ— Building React app..."
                    npm run build
                '''
            }
            post {
                success {
                    echo 'âœ… React app built successfully.'
                }
                failure {
                    echo 'âŒ React app build failed.'
                }
            }
        }

        stage('Stop Existing React App') {
            steps {
                sh '''
                    echo "ğŸ›‘ Checking for running React app..."
                    if pgrep -f "node.*serve" > /dev/null; then
                        echo "Stopping running React app..."
                        sudo pkill -f "node.*serve"
                        echo "âœ… Old app stopped."
                    else
                        echo "â„¹ No running React app found."
                    fi
                '''
            }
            post {
                success {
                    echo 'âœ… Old React app stop stage completed successfully.'
                }
                failure {
                    echo 'âŒ Failed to stop old React app.'
                }
            }
        }

        stage('Start New React App') {
            steps {
                sh '''
                    echo "ğŸš€ Starting new React app..."
                    npm install -g serve
                    nohup npx serve -s build -l 3000 > /dev/null 2>&1 &
                    echo "âœ… React app deployed and running on port 3000."
                '''
            }
            post {
                success {
                    echo 'âœ… React app started successfully.'
                }
                failure {
                    echo 'âŒ Failed to start React app.'
                }
            }
        }
    }

    post {
        success {
            echo "ğŸ¯ Deployment completed successfully - React app live on port 3000."
        }
        failure {
            echo "âŒ Deployment failed - Check Jenkins logs."
        }
    }
}
